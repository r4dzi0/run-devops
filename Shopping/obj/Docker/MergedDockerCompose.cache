services:
  shopping.api:
    build:
      context: /Users/rpingielski/work/git/private/Udemy/run-devops/Shopping
      dockerfile: Shopping.API/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    image: shoppingapi
    ports:
    - published: 8000
      target: 80
  shopping.client:
    build:
      context: /Users/rpingielski/work/git/private/Udemy/run-devops/Shopping
      dockerfile: Shopping.Client/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    image: shoppingclient
    ports:
    - published: 8001
      target: 80
  shopping.db:
    container_name: shoppingdb
    image: mongo
    ports:
    - published: 27017
      target: 27017
    restart: always
    volumes:
    - /Users/rpingielski/work/git/private/Udemy/run-devops/Shopping/dockervolume/mongodb:/data/db:rw
version: '3.4'